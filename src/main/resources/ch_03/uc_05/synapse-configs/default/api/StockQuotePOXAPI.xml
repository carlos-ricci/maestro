<api xmlns="http://ws.apache.org/ns/synapse" name="StockQuotePOXAPI" context="/stockquotepox">
    <resource methods="POST">
        <inSequence>
            <log level="custom">
                <property name="Messsage_Flow" value="== Pox Req : Rec ==="/>
            </log>
            <property name="messageType" value="application/json" scope="axis2"/>

            <call>
                <endpoint key="StockquoteRESTService"/>
            </call>
            <log level="full">
                <property name="Messsage_Flow" value="=== Response Rec ===="/>
            </log>
            <property name="messageType" value="application/xml" scope="axis2"/>

            <respond/>
        </inSequence>
    </resource>
</api>
